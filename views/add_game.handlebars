<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Game Creation</h5>
          <form class="clearfix mb-4" action="POST">
            <div class="form-group">
              <label for="example-text">Title</label>
              <input type="text" id="title" class="form-control" aria-describedby="example-text"
                placeholder="Enter Example Text">
            </div>
            <div class="form-group">
              <label for="example-text">Description</label>
              <input type="text" id="description" class="form-control" aria-describedby="example-text"
                placeholder="Enter Example Text">
            </div>
            <div class="form-group">
              <label for="example-text">URL</label>
              <input type="text" id="URL" class="form-control" aria-describedby="example-text"
                placeholder="Enter Example Text">
            </div>
                 <div class="form-group">
              <label for="example-text">Image URL</label>
              <input type="text" id="imageURL" class="form-control" aria-describedby="example-text"
                placeholder="Enter Example Text">
            </div>
            <button id="submit" class="btn btn-primary float-right">Submit</button><br><br>
       
          </form>

